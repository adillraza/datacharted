<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.datacharted.devserver</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>-c</string>
        <string>cd /Users/pmru/datacharted && source venv/bin/activate && export FLASK_APP=run.py && export FLASK_ENV=development && export FLASK_DEBUG=1 && flask run --host=0.0.0.0 --port=5000</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/Users/pmru/datacharted/dev_server.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/pmru/datacharted/dev_server_error.log</string>
    
    <key>WorkingDirectory</key>
    <string>/Users/pmru/datacharted</string>
</dict>
</plist>
