# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/datacharted_app
DEV_DATABASE_URL=postgresql://username:password@localhost/datacharted_app_dev

# Email Configuration (for future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Google Cloud Configuration (for future BigQuery integration)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# DigitalOcean Configuration (for future VPS deployment)
DIGITALOCEAN_TOKEN=your-digitalocean-api-token

