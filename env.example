# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/datacharted
DEV_DATABASE_URL=sqlite:///app_dev.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=support@datacharted.com
MAIL_PASSWORD=your_app_password_here
MAIL_DEFAULT_SENDER=support@datacharted.com
MAIL_MAX_EMAILS=10

# BigQuery Configuration (for future use)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# DigitalOcean Configuration (for future use)
DIGITALOCEAN_TOKEN=your-digitalocean-token
